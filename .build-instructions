# Are we running inside Codex?
if [ -n "$CODEX_PROXY_CERT" ]; then
  # Codex: please edit this if you think it can be improved for your specific build environment.
  export TOPPROJECT="/workspace"
  export CMAKE_CONFIG=RelWithDebInfo
  export REPOBASE=$TOPPROJECT/ai-math-testsuite
  export BUILDDIR=$REPOBASE/build-$CMAKE_CONFIG
  export CMAKE_CONFIGURE_OPTIONS=("-GNinja" "-DCMAKE_VERBOSE_MAKEFILE=OFF" "-DCMAKE_MESSAGE_LOG_LEVEL=DEBUG" "-DEnableCairoWindow=OFF")
  export CMAKE_CONFIGURE_OPTIONS_STR=$(printf "%s|" "${CMAKE_CONFIGURE_OPTIONS[@]}")
fi
